<%= render layout: "layouts/appdevise.html.erb" do %>
  <div class="panel">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title">Editar Conta</h4>
        <div class="fonte-verde">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :Email, style:"font-size:12px;" %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :Senha %> <i>(Deixe em branco caso não deseje muda-la)</i><br/>
              <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
              <% if @minimum_password_length %>
                <br/>
                <em><%= @minimum_password_length %> caracteres no mínimo</em>
              <% end %>
            </div>

            <div class="field">
              <%= f.label :Confirme_sua_senha %><br/>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
            </div>

            <div class="field">
              <%= f.label :Senha_atual %> <i>(Nós precisamos de sua senha atual para confirmar as mudanças)</i><br/>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
            </div>
            <br>
            <div class="actions">
              <%= f.submit "Salvar!", class: 'btn btn-primary' %>
            </div>
          <% end %>

          <h5>Deseja cancelar sua conta?</h5>
          <%= button_to "Apagar minha conta", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: 'btn btn-primary' %>

        </div>

        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
<% end %>